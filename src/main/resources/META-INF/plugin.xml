<idea-plugin>
    <id>costingrasu.todoorganizer</id>
    <name>TODO-Organizer</name>
    <vendor>costingrasu</vendor>

    <description>A plugin to organize TODOs, FIXMEs, and BUGs hierarchically</description>

    <version>1.0.0</version>
    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Tool Window Registration -->
        <toolWindow id="TODO Organizer"
                    anchor="right"
                    factoryClass="com.github.costingrasu.todoorganizerplugin.toolWindow.MyToolWindowFactory"
                    icon = "/icons/image.png"/>
    </extensions>

</idea-plugin>